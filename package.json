{
  "name": "ninecat-ui",
  "version": "1.0.3",
  "description": "A Vue.js 2.0 Web UI Toolkit.",
  "author": "ninecat-ui",
  "private": false,
  "main": "package/ninecat-ui.js",
  "scripts": {
    "dev": "webpack-dev-server --progress --history-api-fallback --config build/webpack.config.dev.js",
    "start": "npm run dev",
    "prod": "webpack --config build/webpack.config.prod.js",
    "lint": "eslint --ext .js --ext .vue src --ext .vue packages --ext .vue examples",
    "lint:fix": "eslint --ext .js,.vue src --fix",
    "lint:staged": "lint-staged",
    "test:unit": "jest --config test/jest.config.js",
    "test": "npm run lint && npm run test:unit",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand --config test/jest.config.js",
    "docs:update": "node updatedoc.js",
    "docs:build": "webpack --config build/webpack.config.doc.js"
  },
  "keywords": [
    "Vue",
    "Webpack 4",
    "ninecat"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "eslint": "^5.15.3",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.0",
    "jest": "^24.5.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "uglify-es": "^3.3.9",
    "url-loader": "^1.1.2",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.0.6",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "vuepress": "^0.14.11",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --ignore-path .gitignore --fix"
      ]
    },
    "ignore": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "files": [
    "package"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ninecat-ui/ninecat-ui"
  },
  "dependencies": {
    "shelljs": "^0.8.3",
    "text-loader": "^0.0.1",
    "vue-markdown": "^2.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
